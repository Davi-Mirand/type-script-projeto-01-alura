{
    "compilerOptions": {
        "outDir": "dist/js",
        "target": "ES6", 
        "module": "ES6",
        "moduleResolution": "node", // Recomendado para Node.js
        "noEmitOnError": true, // Evita emitir arquivos se houver erros
        "noImplicitAny": true,//ele nao aceita diretamente o valor "any" (apenas se o :any for declarado)
        "strict": true, // Ativa verificações rigorosas (melhor prática)
        "esModuleInterop": true, // Suporta importação de módulos CommonJS
        "skipLibCheck": true, // Ignora verificação de arquivos .d.ts
        "forceConsistentCasingInFileNames": true // Garante consistência em nomes de arquivos
    },
    "include": ["app/**/*"],
    "exclude": ["node_modules", "dist"]
}
